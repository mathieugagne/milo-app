<h1 class='page-header'>Listing projects</h1>

<table class='table'>
  <thead>
    <tr>
      <th><%= sortable_header :title %></th>
      <th><%= sortable_header :description %></th>
      <th><%= sortable_header :status %></th>
      <th><%= sortable_header :comments_count, 'Comments' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project %></td>
        <td><%= project.description %></td>
        <td><%= project_status_label(project.status) %></td>
        <td><%= project.comments_count %></td>
        <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
